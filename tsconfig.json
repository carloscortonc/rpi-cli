{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "module": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "outDir": "dist",
    "rootDir": "./src",
    "checkJs": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@commands/*": ["commands/*"]
    }
  },
  "include": ["src/**/*"]
}
